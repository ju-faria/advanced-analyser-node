{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "processor": ["dist/processor.worklet.js"]
    }  
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ]
}